<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline103"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline201"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.375" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline203"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline204"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.625" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline205"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline206"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.875" />

    <TextView
        android:id="@+id/txtpantalla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:gravity="right|bottom"
        android:text="0"
        android:maxLines="1"
        android:maxLength="7"
        android:background="#f0f2f5"
        android:textColor="#000000"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline201"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnlimpiar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#5d5d5d"
        android:text="CC"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:onClick="borrarPantalla"
        app:layout_constraintBottom_toTopOf="@+id/guideline202"
        app:layout_constraintEnd_toStartOf="@+id/guideline101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline201"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnmasmenos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#5d5d5d"
        android:text="+/-"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:onClick="cambiarMasMenos"
        app:layout_constraintBottom_toTopOf="@+id/guideline202"
        app:layout_constraintEnd_toStartOf="@+id/guideline102"
        app:layout_constraintStart_toStartOf="@+id/guideline101"
        app:layout_constraintTop_toTopOf="@+id/guideline201"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnonoff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#ff6961"
        android:onClick="apagarEncender"
        android:text="ON/OFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline202"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline102"
        app:layout_constraintTop_toTopOf="@+id/guideline201"
        tools:ignore="MissingConstraints"/>
    <Button
        android:id="@+id/btnraiz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#5d5d5d"
        android:text="âˆš"
        android:textSize="40dp"
        android:onClick="operacionRaiz"
        app:layout_constraintBottom_toTopOf="@+id/guideline203"
        app:layout_constraintEnd_toEndOf="@+id/guideline101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline202"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btncuadrado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#5d5d5d"
        android:text="^2"
        android:textSize="35dp"
        android:onClick="elevarCuadrado"
        app:layout_constraintBottom_toTopOf="@+id/guideline203"
        app:layout_constraintEnd_toEndOf="@+id/guideline102"
        app:layout_constraintStart_toStartOf="@+id/guideline101"
        app:layout_constraintTop_toTopOf="@+id/guideline202"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btndivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#5d5d5d"
        android:text="/"
        android:textSize="40dp"
        android:onClick="operacionDividir"
        app:layout_constraintBottom_toTopOf="@+id/guideline203"
        app:layout_constraintEnd_toEndOf="@+id/guideline103"
        app:layout_constraintStart_toStartOf="@+id/guideline102"
        app:layout_constraintTop_toTopOf="@+id/guideline202"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnnueve"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#c2c2c2"
        android:text="9"
        android:textSize="40dp"
        android:onClick="escribirNueve"
        app:layout_constraintBottom_toTopOf="@+id/guideline204"
        app:layout_constraintEnd_toEndOf="@+id/guideline101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline203"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnocho"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#c2c2c2"
        android:text="8"
        android:textSize="40dp"
        android:onClick="escribirOcho"
        app:layout_constraintBottom_toTopOf="@+id/guideline204"
        app:layout_constraintEnd_toEndOf="@+id/guideline102"
        app:layout_constraintStart_toStartOf="@+id/guideline101"
        app:layout_constraintTop_toTopOf="@+id/guideline203"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnsiete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#c2c2c2"
        android:text="7"
        android:textSize="40dp"
        android:onClick="escribirSiete"
        app:layout_constraintBottom_toTopOf="@+id/guideline204"
        app:layout_constraintEnd_toEndOf="@+id/guideline103"
        app:layout_constraintStart_toStartOf="@+id/guideline102"
        app:layout_constraintTop_toTopOf="@+id/guideline203"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnmultiplicacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#5d5d5d"
        android:text="x"
        android:textSize="25dp"
        android:onClick="operacionMultiplicar"
        app:layout_constraintBottom_toTopOf="@+id/guideline203"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline103"
        app:layout_constraintTop_toTopOf="@+id/guideline202"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnseis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#c2c2c2"
        android:text="6"
        android:textSize="40dp"
        android:onClick="escribirSeis"
        app:layout_constraintBottom_toTopOf="@+id/guideline205"
        app:layout_constraintEnd_toEndOf="@+id/guideline101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline204"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btncinco"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#c2c2c2"
        android:text="5"
        android:textSize="40dp"
        android:onClick="escribirCinco"
        app:layout_constraintBottom_toTopOf="@+id/guideline205"
        app:layout_constraintEnd_toEndOf="@+id/guideline102"
        app:layout_constraintStart_toStartOf="@+id/guideline101"
        app:layout_constraintTop_toTopOf="@+id/guideline204"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btncuatro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#c2c2c2"
        android:text="4"
        android:textSize="40dp"
        android:onClick="escribirCuatro"
        app:layout_constraintBottom_toTopOf="@+id/guideline205"
        app:layout_constraintEnd_toEndOf="@+id/guideline103"
        app:layout_constraintStart_toStartOf="@+id/guideline102"
        app:layout_constraintTop_toTopOf="@+id/guideline204"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnsuma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#5d5d5d"
        android:text="+"
        android:textSize="40dp"
        android:onClick="operacionSuma"
        app:layout_constraintBottom_toTopOf="@+id/guideline204"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline103"
        app:layout_constraintTop_toTopOf="@+id/guideline203"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btntres"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#c2c2c2"
        android:text="3"
        android:textSize="40dp"
        android:onClick="escribirTres"
        app:layout_constraintBottom_toTopOf="@+id/guideline206"
        app:layout_constraintEnd_toEndOf="@+id/guideline101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline205"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btndos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#c2c2c2"
        android:text="2"
        android:textSize="40dp"
        android:onClick="escribirDos"
        app:layout_constraintBottom_toTopOf="@+id/guideline206"
        app:layout_constraintEnd_toEndOf="@+id/guideline102"
        app:layout_constraintStart_toStartOf="@+id/guideline101"
        app:layout_constraintTop_toTopOf="@+id/guideline205"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnuno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#c2c2c2"
        android:text="1"
        android:textSize="40dp"
        android:onClick="escribirUno"
        app:layout_constraintBottom_toTopOf="@+id/guideline206"
        app:layout_constraintEnd_toEndOf="@+id/guideline103"
        app:layout_constraintStart_toStartOf="@+id/guideline102"
        app:layout_constraintTop_toTopOf="@+id/guideline205"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnresta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#5d5d5d"
        android:text="-"
        android:textSize="40dp"
        android:onClick="operacionResta"
        app:layout_constraintBottom_toTopOf="@+id/guideline205"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline103"
        app:layout_constraintTop_toTopOf="@+id/guideline204"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btncero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:backgroundTint="#c2c2c2"
        android:text="0"
        android:textSize="40dp"
        android:onClick="escribirCero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline206"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnpunto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:backgroundTint="#c2c2c2"
        android:gravity="center|center_horizontal"
        android:text="."
        android:textSize="40dp"
        android:onClick="escribirPunto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline103"
        app:layout_constraintStart_toStartOf="@+id/guideline102"
        app:layout_constraintTop_toTopOf="@+id/guideline206"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnigual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#ff6961"
        android:text="="
        android:textSize="40dp"
        android:onClick="realizarOPeraciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline103"
        app:layout_constraintTop_toTopOf="@+id/guideline205"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>